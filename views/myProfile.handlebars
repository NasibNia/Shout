<div class="card" style="width: 18rem;">
    <div class="card-body">
    <h5 class="card-title">{{all.name}}, here are your shouts!</h5>
    {{#each all.Shouts}} 
        <div class="alert alert-primary" role="alert">
            {{this.body}}
            <br>
            By: {{all.name}}
        
            <button class="btn btn-success stat-btn" data-id="{{this.id}}" data-body="{{this.body}}" data-count={{this.count}} data-stat={{this.status}}>Update</button>
            <button class="btn btn-success del-btn" data-id="{{this.id}}">Del</button>
            <button class="btn btn-primary" id="{{this.count}}">{{this.count}}</button>
        </div>
    {{/each}}                   
</div>